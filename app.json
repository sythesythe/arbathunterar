{
  "expo": {
    "name": "AR Bat Hunter",
    "slug": "ar-bat-hunter",
    "version": "1.0.0",
    "orientation": "landscape",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1A0026"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourusername.arbathunter",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera for Augmented Reality gameplay."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1A0026"
      },
      "permissions": [
        "CAMERA"
      ],
      "package": "com.yourusername.arbathunter"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow AR Bat Hunter to access your camera to play the AR game."
        }
      ],
      "expo-asset"
    ]
  }
}
